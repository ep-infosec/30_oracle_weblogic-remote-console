{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDirs": [
      "src"
    ],
    "outDir": "dist"
  },
  "paths": {
    "ojs/*": [
      "./node_modules/@oracle/oraclejet/dist/types/*"
    ],
    "knockout": [
      "./node_modules/knockout"
    ],
    "dotenv": [
      "./node_modules/dotenv/types/*"
    ]
  },
  "exclude": [
    "web",
    "node_modules",
    "**/node_modules/*"
  ]
}